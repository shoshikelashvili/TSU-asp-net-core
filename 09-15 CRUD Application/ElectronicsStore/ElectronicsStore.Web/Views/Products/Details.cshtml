@model ProductViewModel

<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                <img src="@Model.ImageURL" alt="image"/>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="single-product-details">
                    <h2>@Model.Name</h2>
                    <h5>₾@Model.Price</h5>
                    <p class="available-stock">
                        <span> მარაგში: <a class="@(Model.IsAvailable ? "active" : "disabled")"> @(Model.IsAvailable ? "არის" : "არ არის")</a></span>
                    </p><p>
                    </p><h4>აღწერა: </h4>
                    <p class="product-description">
                        @Model.Description
                    </p>

                    <div class="price-box-bar">
                        <div class="cart-and-bay-btn">
                            <a class="btn hvr-hover" data-fancybox-close="" asp-action="List">პროდუქტებზე დაბრუნება</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>